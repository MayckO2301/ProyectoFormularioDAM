<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/fotoImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/nombreTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/fotoImageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/edadTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/fotoImageView"
            app:layout_constraintTop_toBottomOf="@id/nombreTextView"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/sexoTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/fotoImageView"
            app:layout_constraintTop_toBottomOf="@id/edadTextView"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/anioNacimientoTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/fotoImageView"
            app:layout_constraintTop_toBottomOf="@id/sexoTextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="AÃ±o Nacimiento:" />

        <TextView
            android:id="@+id/correoTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/fotoImageView"
            app:layout_constraintTop_toBottomOf="@id/anioNacimientoTextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Correo:" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>